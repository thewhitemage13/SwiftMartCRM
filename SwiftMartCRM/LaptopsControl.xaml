<UserControl x:Class="SwiftMartCRM.LaptopsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SwiftMartCRM"
             mc:Ignorable="d" 
             d:DesignWidth="800" Height="455">
    <Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,50,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                <TextBlock Text="Screen Size"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                <TextBlock Text="Screen Resolution"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
                <TextBlock Text="CPU"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                <TextBlock Text="Camera"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                <TextBlock Text="RAM"/>
                <TextBox/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2" Margin="10" HorizontalAlignment="Left">
                <TextBlock Text="Micro SD"/>
                <ComboBox Width="300">
                    <ComboBoxItem Content="Yes"></ComboBoxItem>
                    <ComboBoxItem Content="No"></ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Margin="10" HorizontalAlignment="Left">
                <TextBlock Text="3G"/>
                <ComboBox Width="300">
                    <ComboBoxItem Content="Yes"></ComboBoxItem>
                    <ComboBoxItem Content="No"></ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10" HorizontalAlignment="Left">
                <TextBlock Text="LTE"/>
                <ComboBox Width="300">
                    <ComboBoxItem Content="Yes"></ComboBoxItem>
                    <ComboBoxItem Content="No"></ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="2" Margin="10" HorizontalAlignment="Left">
                <TextBlock Text="5G"/>
                <ComboBox Width="300">
                    <ComboBoxItem Content="Yes"></ComboBoxItem>
                    <ComboBoxItem Content="No"></ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="0" Margin="10" HorizontalAlignment="Left">
                <TextBlock Text="GPS"/>
                <ComboBox Width="300">
                    <ComboBoxItem Content="Yes"></ComboBoxItem>
                    <ComboBoxItem Content="No"></ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="1" Margin="10" HorizontalAlignment="Left">
                <TextBlock Text="GLONASS"/>
                <ComboBox Width="300">
                    <ComboBoxItem Content="Yes"></ComboBoxItem>
                    <ComboBoxItem Content="No"></ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="2" Margin="10" HorizontalAlignment="Left">
                <TextBlock Text="BDS"/>
                <ComboBox Width="300">
                    <ComboBoxItem Content="Yes"></ComboBoxItem>
                    <ComboBoxItem Content="No"></ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" >
                <WrapPanel x:Name="PhotoContainer" HorizontalAlignment="Stretch" Margin="10" Width="1000">
                </WrapPanel>

            </StackPanel>
        </Grid>
        <Button Content="Add Photos" Width="200" Height="40" Margin="0,0,0,10" HorizontalAlignment="Left" Click="AddPhotos_Click" VerticalAlignment="Bottom" Grid.Row="1"/>
    </Grid>
</UserControl>
