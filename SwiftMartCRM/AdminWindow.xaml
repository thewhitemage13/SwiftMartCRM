<Window x:Class="SwiftMartCRM.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwiftMartCRM"
        mc:Ignorable="d"
        Title="AdminWindow" Height="1080" Width="1920">
    <Grid>
        <!-- Top bar -->
        <Grid Name="LoginForm">
            <Grid Background="#EA6767" Height="100" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="225" />
                    <ColumnDefinition Width="321" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Margin="61,13,61,22" Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\photo_2024-12-14_14-58-16-removebg-preview.png" Stretch="Fill"/>
            </Grid>

            <!-- Left menu -->
            <Border Background="#FFE0E0E0" Width="150" HorizontalAlignment="Left" Margin="0,166,0,138" BorderThickness="0">
                <StackPanel VerticalAlignment="Center">
                    <Button Content="Add product" Margin="10,5" Height="30" BorderThickness="0"/>
                    <Button Content="Contact" Margin="10,5" Height="30" BorderThickness="0"/>
                    <Button Content="Payment information" Margin="10,5" Height="30" BorderThickness="0"/>
                    <Button Content="Orders" Margin="10,5" Height="30" BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Main content -->

            <Grid Margin="150,50,0,0">
                <Border Background="#FFE0E0E0" CornerRadius="10" Margin="66,181,66,181">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Text="Fill in the product information" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <!-- Form fields -->
                        <Grid Grid.Row="1" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Category and Subcategory -->
                            <StackPanel Grid.Column="0" Margin="10" HorizontalAlignment="Left">
                                <TextBlock Text="Category"/>
                                <ComboBox Width="300" Name="CategoryComboBox">
                                    <ComboBoxItem Content="Technique"></ComboBoxItem>
                                    <ComboBoxItem Content="Household appliances"></ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10" HorizontalAlignment="Left">
                                <TextBlock Text="Subcategory"/>
                                <ComboBox Width="300" Name="SubcategoryComboBox" SelectionChanged="SubcategoryComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Phones"></ComboBoxItem>
                                    <ComboBoxItem Content="Laptops"></ComboBoxItem>
                                    <ComboBoxItem Content="TVs"></ComboBoxItem>
                                    <ComboBoxItem Content="Tablets"></ComboBoxItem>
                                    <ComboBoxItem Content="Refrigerators"></ComboBoxItem>
                                    <ComboBoxItem Content="Wachine machines"></ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <!-- Dynamic Fields -->
                            <ContentControl Grid.ColumnSpan="2" Margin="10,50,10,0" Name="DynamicFields">
                            </ContentControl>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
