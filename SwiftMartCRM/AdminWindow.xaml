<Window x:Class="SwiftMartCRM.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwiftMartCRM"
        mc:Ignorable="d"
        Title="AdminWindow" Height="1080" Width="1920">
    <Grid>
        <!-- Top bar -->
        <Grid Name="LoginForm">
            <Grid Background="#EA6767" Height="100" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="225" />
                    <ColumnDefinition Width="321" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Margin="61,13,61,22" Source="C:\Users\lolim\Desktop\Ресурсы для Swift Mart\photo_2024-12-14_14-58-16-removebg-preview.png" Stretch="Fill"/>
            </Grid>

            <!-- Left menu -->
            <Border Background="#FFE0E0E0" Width="150" HorizontalAlignment="Left" Margin="0,166,0,138" BorderThickness="0">
                <StackPanel VerticalAlignment="Center">
                    <Button Content="Add product" Margin="10,5" Height="30" BorderThickness="0"/>
                    <Button Content="Contact" Margin="10,5" Height="30" BorderThickness="0"/>
                    <Button Content="Payment information" Margin="10,5" Height="30" BorderThickness="0"/>
                    <Button Content="Orders" Margin="10,5" Height="30" BorderThickness="0"/>
                </StackPanel>
            </Border>

            <!-- Main content -->
            <Grid Margin="150,50,0,0">
                <Border Background="#FFE0E0E0" CornerRadius="10" Margin="66,181,66,181">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <TextBlock Text="Fill in the product information" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <!-- Form fields -->
                        <Grid Grid.Row="1" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Category and Subcategory -->
                            <StackPanel Grid.Column="0" Margin="10">
                                <TextBlock Text="Category"/>
                                <TextBox Text="Technik"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10">
                                <TextBlock Text="Subcategory"/>
                                <TextBox Text="Phones"/>
                            </StackPanel>

                            <!-- Specifications -->
                            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,50,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Row 1 -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                                    <TextBlock Text="Screen Size"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                                    <TextBlock Text="Screen Resolution"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
                                    <TextBlock Text="CPU"/>
                                    <TextBox/>
                                </StackPanel>

                                <!-- Row 2 -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                                    <TextBlock Text="Camera"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                                    <TextBlock Text="RAM"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="10">
                                    <TextBlock Text="Micro SD"/>
                                    <TextBox/>
                                </StackPanel>

                                <!-- Row 3 -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
                                    <TextBlock Text="3G"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
                                    <TextBlock Text="LTE"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="2" Margin="10">
                                    <TextBlock Text="5G"/>
                                    <TextBox/>
                                </StackPanel>

                                <!-- Row 4 -->
                                <StackPanel Grid.Row="3" Grid.Column="0" Margin="10">
                                    <TextBlock Text="GPS"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="1" Margin="10">
                                    <TextBlock Text="GLONASS"/>
                                    <TextBox/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="2" Margin="10">
                                    <TextBlock Text="BDS"/>
                                    <TextBox/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
